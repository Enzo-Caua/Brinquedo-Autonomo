module botao_velocidade(chave_0, chave_1, botao, clk_botao);
	input botao, clk_botao;
	output chave_0, chave_1;
	
	wire [1:0] q;
	wire sinal;
	
	flip_flop_d(.q(q[0]),.d(!botao),.reset(1'b0),.clk(clk_botao));
	flip_flop_d(.q(q[1]),.d(q[0]),.reset(1'b0),.clk(clk_botao));
	
	and And0(sinal, q[0], !q[1]);
	
	flip_flop_d(.q(chave_0),.d(!chave_0),.reset(1'b0),.clk(sinal));
	flip_flop_d(.q(chave_1),.d(!chave_1),.reset(1'b0),.clk(sinal));
	
endmodule
	